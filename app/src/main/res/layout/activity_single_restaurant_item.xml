<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".SingleRestaurantItemActivity">
<android.support.v7.widget.Toolbar
    android:background="@drawable/toolbar"
    android:layout_width="match_parent"
    android:layout_height="74dp">
</android.support.v7.widget.Toolbar>
    <ImageView
        android:src="@drawable/about_us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:text="Марукаме"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="52dp"
        android:layout_height="38dp"
        android:src="@drawable/if_map" />
    <TextView
        android:id="@+id/singleRestaurantName"
        android:layout_marginTop="10dp"
        android:textColor="#FFFFFF"
        android:text="м. домодедовская
        ул Ореховый ,б-р д.14 корп 3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="52dp"
            android:layout_height="38dp"
            android:src="@drawable/if_call" />

        <TextView
            android:id="@+id/singleRestaurantNumber"
            android:layout_marginTop="5dp"
            android:text="+7(906)-720-3364"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/buttonCallRestaurant"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="10dp"
            android:alpha="0.7"
            android:background="#2ead2e"
            android:text="Позвонить"
            android:layout_width="112dp"
            android:layout_height="40dp" />
    </LinearLayout>
<LinearLayout
    android:layout_marginTop="10dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:src="@drawable/if_clock"
        android:layout_width="52dp"
        android:layout_height="38dp" />
    <TextView
        android:text="Часы работы
11:00-22:30: Понедельник-Воскресенье "
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
</LinearLayout>