<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/drawer_layout_enter"
    android:background="@drawable/background"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <android.support.v7.widget.Toolbar
            android:layout_width="wrap_content"
            android:layout_height="74dp"
            android:background="@drawable/toolbar"></android.support.v7.widget.Toolbar>
        <TextView
            android:layout_width="366dp"
            android:layout_height="wrap_content"

            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Вход"
            android:textColor="#FFFFFF" />

        <EditText

            android:textColorHint="#b8b4b4"
            android:hint="Ел. почта"
            android:textSize="15dp"
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:textSize="15dp"
            android:textColorHint="#b8b4b4"
            android:hint="Пароль"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textEnter"
            android:layout_width="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Создать новый акаунт"
            android:textColor="#b8b4b4"
            android:textSize="15dp" />

        <Button
            android:layout_width="203dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:alpha="0.7"
            android:background="#2ead2e"
            android:text="Вход"
            android:textColor="#ffffff"
            android:textSize="25dp" />
    </LinearLayout>
    <android.support.design.widget.NavigationView
        app:itemTextColor="#FFFFFF"
        android:background="@drawable/background_nav"
        android:id="@+id/nav_view_enter"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/app_menu"/>
</android.support.v4.widget.DrawerLayout>