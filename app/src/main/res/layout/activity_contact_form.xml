<?xml version="1.0" encoding="utf-8"?>
    <android.support.v4.widget.DrawerLayout
xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:id="@+id/drawer_layout_contact"
    tools:context=".ContactFormActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:layout_width="wrap_content"
            android:layout_height="74dp"
            android:background="@drawable/toolbar"></android.support.v7.widget.Toolbar>
    <TextView

        android:textSize="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Обратная связь"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:textColorHint="#b8b4b4"
        android:textSize="15dp"
        android:hint="Ваше имя"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:textSize="15dp"

        android:hint="Телефон"
        android:textColorHint="#b8b4b4"
        android:inputType="number"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:textSize="15dp"

        android:textColorHint="#b8b4b4"
        android:hint="Ел. почта"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:textColorHint="#b8b4b4"
        android:textSize="15dp"

        android:hint="Ресторан"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:textColorHint="#b8b4b4"
        android:textSize="15dp"

        android:hint="Прикрепить фото (не обязательно)"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:textSize="15dp"
        android:textColorHint="#b8b4b4"
        android:hint="Отзыв"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="10dp"
        android:textColor ="#b8b4b4"
        android:text="Нажимая на кнопку Отправить Вы соглашаетесь к нашей политикой конфиденциальностий."
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button

        android:layout_width="242dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:alpha="0.5"
        android:background="#2ead2e"
        android:text="Отправить"
        android:textColor="#FFFFFF"
        android:textSize="25dp" />
    </LinearLayout>
    <android.support.design.widget.NavigationView
        app:itemTextColor="#FFFFFF"
        android:background="@drawable/background_nav"
        android:id="@+id/nav_view_contact"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/app_menu"/>
</android.support.v4.widget.DrawerLayout>
